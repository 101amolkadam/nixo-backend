{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "productId": {
      "type": "uid",
      "required": true,
      "targetField": "name"
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "sizes": {
      "type": "json",
      "required": true
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "originalPrice": {
      "type": "decimal",
      "required": false,
      "default": 0
    },
    "thumbnil": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images"
      ]
    },
    "subTitle": {
      "type": "string"
    }
  }
}
